---
import { faqs } from '../../data/faq';
---

<div class="mx-auto px-5 bg-white min-h-sceen">
	<div class="flex flex-col items-center">
		<h2 class="font-bold md:text-4xl text-2xl mt-5 tracking-tight">Sabemos que tienes preguntas</h2>
		<p class="text-neutral-500 md:text-2xl text-xl mt-3">Â¡Y nosotros tenemos respuestas!</p>
	</div>
	<div class="grid divide-y divide-neutral-200 max-w-4xl mx-auto mt-8">
		{
			faqs.map((faq) => (
				<div class="py-5">
					<details class="group">
						<summary class="flex justify-between items-center font-medium cursor-pointer list-none">
							<span>{faq.question}</span>
							<span class="transition group-open:rotate-180">
								<svg
									fill="none"
									height="24"
									shape-rendering="geometricPrecision"
									stroke="currentColor"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="1.5"
									viewBox="0 0 24 24"
									width="24"
								>
									<path d="M6 9l6 6 6-6" />
								</svg>
							</span>
						</summary>
						<p class="text-neutral-600 mt-3 group-open:animate-fadeIn">{faq.answer}</p>
					</details>
				</div>
			))
		}
	</div>
</div>

---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/hero/Hero.astro";
import Clases from "../components/entrenamiento/Clases.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Atrae pacientes en internet">
  <main>
    <Hero />
    <button
      onclick="topFunction()"
      id="myBtn"
      class="fixed bottom-4 right-4 hidden rounded-full bg-black p-6 opacity-60 z-10"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="white"
        class="h-6 w-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M4.5 15.75l7.5-7.5 7.5 7.5"></path>
      </svg>
    </button>
    <Clases />
    <Footer />
  </main>
</Layout>

<script type="text/javascript">
  // Get the button
  let mybutton = document.getElementById("myBtn");

  // When the user scrolls down 20px from the top of the document, show the button
  window.onscroll = function () {
    scrollFunction();
  };

  function scrollFunction() {
    if (
      document.body.scrollTop > 200 ||
      document.documentElement.scrollTop > 200
    ) {
      mybutton.style.display = "block";
    } else {
      mybutton.style.display = "none"; // Set the display style to none
    }
  }

  function topFunction() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
  }
</script>
